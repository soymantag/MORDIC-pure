<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <!--            <ImageView
                            android:id="@+id/item_straggered_iv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="center"
                            android:src="@mipmap/ic_launcher"/>-->
            <com.chris.mordic.ui.RatioLayout
                android:id="@+id/item_straggered_ratioLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:pic_ratio="0.6">
                <ImageView
                    android:id="@+id/item_straggered_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/image20130506"/>
            </com.chris.mordic.ui.RatioLayout>

            <TextView
                android:id="@+id/item_straggered_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_straggered_ratioLayout"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="#212121"
                android:textSize="16sp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>